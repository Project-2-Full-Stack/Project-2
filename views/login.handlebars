<div class='row justify-center-md'>
  <div class='col-md-5 card p-3'>
    <h2>Log In</h2>

    <form class='form login-form'>
      <div class='form-group'>
        <label for='email-login'>Email</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group pt-3'>
        <button class='btn btn-info btn-lg btn-block' type='submit'>LOGIN</button>
      </div>
    </form>
    <hr class="my-4">
    <p>Don't have account yet?<strong><a href='/signup'> Sign up here</a></strong></p>
  </div>
</div>

